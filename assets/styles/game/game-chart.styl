.game__chart
	width 100%
	height fit-content
	max-width 830px
	display flex
	flex-direction column
	padding $gap-big $gap-large
	border-radius $border-radius-big
	background-color $color-background
	border $border

	&:not(:first-child)
		margin-left $gap-big

	&._table
		min-width 360px
		max-width 360px

	&-title
		font-size 24px
		font-weight $bold
		margin-bottom $gap

	&-table
		font-size 12px
		color $color-text
		margin-top auto

		& .ant-table-thead > tr
			background transparent

			& > th
				background transparent
				border none
				color $color-text
				padding 10px

		& tr
			background-color transparent
			color $color-text

			&:first-child td
				border-top $border

			& td
				border-bottom $border

			& td:first-child
				border-left $border

			& td:last-child
				border-right $border

			&:first-child td:first-child
				border-top-left-radius 6px

			&:first-child td:last-child
				border-top-right-radius 6px

			&:last-child td:first-child
				border-bottom-left-radius 6px

			&:last-child td:last-child
				border-bottom-right-radius 6px

		& .ant-table-tbody > tr:hover:not(.ant-table-expanded-row):not(.ant-table-row-selected) > td
			background #22254a

		&._small td
			height 30px
			padding 0 $gap-small

		&._small tbody.ant-table-tbody td p
			font-size 12px

		&._big td
			height 60px

		&._big tbody.ant-table-tbody td
			font-size 14px

	&-indicator
		display flex
		align-items center

		& span
			height 10px
			width 10px
			border-radius $border-radius-circle
			margin-right 9px

	&-address
		display flex
		justify-content flex-start
		align-items center
		max-width 160px
		color $color-text-third
		transition color $transition

		&:hover
			color $color-link-hover

		& span
			max-width 130px
			text-overflow()

		& i
			margin-left 10px

		&._total
			color $color-text
			pointer-events none

	& .ui-chart
		margin 0 -15px

	&._newNft
		max-width 520px

		& .ui-chart
			margin-top 40px

	&-stats
		display flex
		justify-content flex-start
		align-items flex-start
		flex-wrap wrap
		row-gap $gap
		column-gap $gap

		& .ui-statistic
			background-color $color-background-secondary
			border $border
			border-radius $border-radius
			padding $gap-small 12px
			height 60px
			min-width 179px
			max-width 179px

			&__title
				width 100%
				justify-content space-between

	&._loading &-title
		loading()

	&-loading
		width 100%
		height 100%
		min-height 310px
		loading()
