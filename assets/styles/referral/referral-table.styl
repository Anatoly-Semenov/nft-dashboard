.referral__table
	width 100%

	&-title
		margin-top $gap-big
		font-size 20px
		font-weight $bold

	& .ui-table
		width 100%
		margin-top $gap-small

	&-profile
		display flex
		justify-content flex-start
		align-items center
		max-height 50px
		cursor pointer
		transition opacity $transition

		& .ui-avatar
			border $border

		&:hover
			opacity .8

	&-info
		margin-left $gap
		display flex
		flex-direction column
		justify-content flex-start
		align-items flex-start

	&-name
		font-size 16px

	&-wallet
		font-size 12px
		color $color-text-disabled
		margin-top 5px

	&-text
		font-size 16px

	& .ui-result
		min-width 100%
		margin-top $gap-big
		border-radius $border-radius-big

	&._loading &-avatar, &._loading &-name, &._loading &-wallet, &._loading &-text
		loading()

	&._loading &-avatar
		height 40px
		width 40px
		border-radius $border-radius-circle
