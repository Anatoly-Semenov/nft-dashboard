@media screen and (max-width: 1200px)
	.referral__info
		padding $gap

		&-row
			flex-direction column

		&-col
			&:not(:first-child)
				margin-top $gap-big

			&._short
				margin-right 0

		&-title
			flex-direction column
			align-items flex-start
			justify-content flex-start
			margin-top 0
			font-size 16px

			&._short
				display none

			& svg
				margin-bottom $gap-small

		&-list
			margin-top $gap

			&, &._big
				padding-left 0

		&-item
			font-size 13px

			& svg
				position relative
				left 0
				top 3px
