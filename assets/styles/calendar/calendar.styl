.calendar
	width 100%
	display flex
	flex-direction column
	justify-content flex-start
	align-items flex-start

	& .ui-input
		width 300px

		& .ant-input-affix-wrapper .ant-input-prefix
			left 25px

		& .ant-input-affix-wrapper .ant-input:not(:first-child)
			height 52px
			padding-left 50px

	&__intro
		width 100%
		display flex
		justify-content space-between
		align-items center
		margin-bottom $gap-big

	&__text
		display flex
		flex-direction column

	&__title
		font-size 40px
		font-weight $bold
		color $color-text

	&__description
		font-size 18px
		color $color-text-third
		line-break()
		margin-top $gap-small
		max-width 800px

	&__subtitle
		font-size 24px
		font-weight $bold
		color $color-text

	&__item
		display flex
		justify-content flex-start
		align-items center
		max-height 50px
		cursor pointer
		transition opacity $transition

		& .ui-avatar
			border $border

		&:hover
			opacity .8

	&__info
		margin-left $gap

	&__link
		font-size 18px
		color $color-link
		transition color $transition

		& .ui-tag
			color $color-background
			cursor pointer

		& svg
			margin-left 5px

		& path
			fill $color-background
			transition fill $transition

		&:hover
			color $color-background-dark

			& .ui-tag
				color $color-background-dark

			& path
				fill $color-background-dark

	&__tag
		&-date.ui-tag.ant-tag
			color $color-text-secondary
			border none

			& path
				fill $color-text-secondary

			&._tba
				color $color-text-disabled

	&__date
		font-size 18px
		color $color-text

		&._tba
			color $color-text-third

	&__name
		font-size 18px
		font-weight $bold

	&__token
		font-size 12px
		color $color-text-third
		margin-top 5px

	&__detail
		display flex
		align-items center
		font-size 14px
		color $color-link

		& .anticon
			margin-left 3px

		& path
			fill $color-link
			transition fill $transition

		&:hover
			color $color-link-hover

			& path
				fill $color-link-hover

	& .ui-statistic
		display flex
		justify-content center
		align-items flex-end
		margin-left auto
		margin-right 0

		&__data
			flex-direction column
			align-items flex-end

			&-text
				margin-right 0

	& .ui-table
		& .ant-table-body
			color $color-text

			& .ant-table-row.ant-table-row-level-0
				& td:first-child
					min-width 230px

				& td:last-child
					min-width 100px
					min-max 100px

	& .ui-table._loading &__name, & .ui-table._loading &__detail, & .ui-table._loading &__link, & .ui-table._loading &__marketplace, & .ui-table._loading p:not(&__param, &__param-description), & .ui-table._loading .ui-avatar
		loading()
		height 22px
		width 60px
		margin-left auto
		margin-right auto

	& .ui-table._loading div&__info p&__name
		height 25px
		width 65px
		margin-left 0

	& .ui-table._loading &__detail
		height 18px
		width 84px
		margin-top 4px
		color transparent

	& .ui-table._loading .ui-avatar
		border-radius $border-radius-circle
		height 50px
		width 50px

	& .ui-table._loading .ui-tag
		color transparent
