.calendar__widgets
	display flex
	flex-direction column
	width 100%
	margin-top 50px

	&-title
		font-size 24px
		font-weight $bold

		& svg
			margin-right $gap-small

	&-items
		width 100%
		display flex
		flex-direction column
		margin-top $gap-big

	&-row
		display flex
		row-gap $gap-big
		column-gap $gap-big
		width 100%

		&._small
			row-gap $gap-big
			column-gap $gap-big

		&:not(:first-child)
			margin-top 50px
