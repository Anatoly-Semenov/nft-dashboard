.profile__achievement
	display flex
	justify-content flex-start
	align-items center
	flex-direction column
	min-height 124px
	max-height 200px
	min-width 146px
	max-width 146px
	border-radius $border-radius-middle
	border $border
	padding $gap-small
	background-color transparent
	position relative
	transitionMixin(background-color, border-color, opacity)

	&-logo
		position absolute
		top $gap-extra-small
		left $gap-extra-small
		height 24px
		width 24px
		object-fit cover
		border-radius $border-radius
		pointer-events none

	&-img, &-text
		transition opacity $transition

	&-img
		width 100%
		height 64px
		object-fit contain
		transition filter $transition
		pointer-events none
		user-select none

	&-text
		flex-center()
		flex-direction column
		margin-top $gap-extra-small

	&-title
		color $color-text
		font-size 13px
		font-weight $regular

	&-points
		display flex
		align-items center
		font-size 14px
		font-weight $bold
		color $color-text
		margin-top $gap-small

		& span
			color $color-text-third
			font-weight $regular
			margin-left 5px

		& svg
			margin-right $gap-small
			width 16px

			& path
				fill $color-text-third

	&-status
		flex-center()
		width 100%
		font-size 14px
		margin-top $gap-extra-small
		transitionMixin(font-weight, color, background)

		&._mint
			color $color-ui
			font-weight $bold

	&._disabled &-img
		filter grayscale(100%)

	&._disabled &-points
		opacity .7

	&._ready:hover
		border-color $color-ui

	&._minted:hover
		background-color $color-background-secondary

	&._loading
		loading()
		border none

	&._loading &-img, &._loading &-text
		opacity 0

