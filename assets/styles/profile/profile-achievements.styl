.profile__achievements
	width 100%
	display flex
	flex-direction column

	&:not(:first-child)
		margin-top $gap-extra-large

	&-header
		width 100%
		display flex
		justify-content flex-start
		align-items center

	&-game
		display flex
		align-items center
		transition opacity $transition

		&:hover
			opacity .7

	&-intro
		flex-center()
		margin-left $gap-small

		& svg
			margin-left $gap-extra-small

	&-title
		color $color-text
		font-size 18px
		font-weight $bold

	&-description
		color $color-text-third
		font-size 12px
		margin-top 2px

	&-tag
		font-weight $bold
		margin-left $gap

		& span
			color $color-text-disabled
			font-weight $regular
			margin-left $gap-extra-small

	&-logo
		width 40px
		height 40px

		&._empty
			background-color $color-background-secondary

	&-actions
		display flex

		& .ui-button
			min-width 124px

	&-list
		display flex
		flex-wrap wrap
		row-gap $gap
		column-gap $gap
		margin-top $gap-big
		min-width 800px

		& .ui-result__description
			max-width 560px

		&._private .ui-result
			margin-top -80px

	&-more
		flex-center()
		width 100%
		height 32px
		color $color-text
		background-color $color-background-third
		margin-top $gap
		transition background-color $transition

		&:hover
			background-color $color-background-secondary

		& svg
			transition transform $transition
			margin-left $gap-extra-small
			transform rotate(180deg)

		&._open svg
			transform rotate(0deg)

	&._public &-intro
		flex-direction column
		align-items flex-start

	&._public &-game
		pointer-events none

	&._loading &-logo, &._loading &-title, &._loading &-description, &._loading &-actions > .ui-button
		loading()

	&._loading &-game
		pointer-events none
