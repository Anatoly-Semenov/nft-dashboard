.layout
	min-height 100vh
	width 100%
	background-color $color-background
	display flex
	justify-content center
	align-items flex-start
	overflow-x hidden

	&__container
		display flex
		flex-direction column
		min-height 100vh
		width 1300px

	&__header, &__footer, &__social
		position relative
		z-index 6

	&__header, &__footer
		display flex
		justify-content space-between
		align-items center
		width 100%

	&__header-logo, &__footer-logo
		transition opacity $transition
		user-select none

		&:hover
			opacity .8

		&:active
			opacity .7

		& img
			pointer-events none

	&__content
		position relative
		z-index 2
		width 100%

		& > *:not(.layout__content-background)
			position relative
			z-index 2

		&._profile
			display flex
			justify-content flex-start
			align-items flex-start

		&-profile
			width 100%

	&__social
		display flex

	&__menu
		position fixed
		bottom 0
		right 0
		width 100%
		height 80px
		display flex
		justify-content space-around
		align-items center
		background-color $color-background
		border-top $border
		padding-bottom 10px
		z-index 10

		&-item
			display flex
			flex-direction column
			justify-content center
			align-items center

			& > i, & > span
				color $color-text-third
				transition color $transition

			& > span
				font-size 12px
				margin-top 5px

			& > i
				font-size 20px

			& path
				transition fill $transition
				fill $color-text-third

			&.nuxt-link-exact-active i, &.nuxt-link-exact-active span
				color $color-link

			&.nuxt-link-exact-active path
				fill $color-link
