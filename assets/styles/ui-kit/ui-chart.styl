.ui-chart
	height 100%

	& .apexcharts-text tspan
		fill $color-text-third

	& .apexcharts-xaxis-label
		position relative

		&:after
			content ""
			position absolute
			top -10px
			left 0
			background-color $color-background-inversion
			height 20px
			width 20px

	& .apexcharts-legend-text
		color $color-text !important
